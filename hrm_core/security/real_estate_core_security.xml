<odoo>


  <data noupdate="0">


    <record id="module_real_estate_category" model="ir.module.category">
      <field name="name">Quản lý bất động sản</field>
      <field name="sequence">1</field>
    </record>

    <record id="module_real_estate_category_user" model="ir.module.category">
      <field name="name">Chức vụ</field>
      <field name="parent_id" ref="module_real_estate_category"/>
      <field name="sequence">2</field>
    </record>

    <record id="real_estate_group_marketing" model="res.groups">
      <field name="name">Marketing</field>
      <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
      <field name="category_id" ref="module_real_estate_category_user"/>
    </record>

    <record id="real_estate_group_sale" model="res.groups">
      <field name="name">Sale</field>
      <field name="implied_ids" eval="[(4, ref('real_estate_group_marketing'))]"/>
      <field name="category_id" ref="module_real_estate_category_user"/>
    </record>

    <record id="real_estate_group_sale_director" model="res.groups">
      <field name="name">Giám đốc Sale</field>
      <field name="implied_ids" eval="[(4, ref('real_estate_group_sale'))]"/>
      <field name="category_id" ref="module_real_estate_category_user"/>
    </record>
    <record id="real_estate_group_admin" model="res.groups">
      <field name="name">Quản trị viên</field>
      <field name="category_id" ref="module_real_estate_category_user"/>
      <field name="implied_ids" eval="[(4, ref('real_estate_group_sale_director'))]"/>
    </record>
    <record id="real_estate_branch_general" model="res.groups">
      <field name="name">Giám đốc chi nhánh</field>
      <field name="category_id" ref="module_real_estate_category_user"/>
      <field name="implied_ids" eval="[(4, ref('real_estate_group_admin'))]"/>
    </record>
    <record id="real_estate_group_general" model="res.groups">
      <field name="name">Tổng giám đốc</field>
      <field name="implied_ids" eval="[(4, ref('real_estate_branch_general'))]"/>
      <field name="category_id" ref="module_real_estate_category_user"/>
    </record>
    <record id="real_estate_group_super_admin" model="res.groups">
      <field name="name">Siêu quản trị viên</field>
      <field name="implied_ids" eval="[(4, ref('real_estate_group_general'))]"/>
      <field name="category_id" ref="module_real_estate_category_user"/>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="rule_branch_general_see_own_team" model="ir.rule">
        <field name="name">See own team</field>
        <field name="model_id" ref="vitech_real_estate_core.model_vitech_real_estate_team"/>
        <field name="domain_force">['|',('branch_id','=',False),('branch_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user')),(4, ref('real_estate_group_super_admin')),(4, ref('real_estate_group_general'))]"/>
    </record>

