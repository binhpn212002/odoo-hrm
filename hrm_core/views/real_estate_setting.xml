<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="view_res_config_settings_inherit" model="ir.ui.view">
      <field name="name">res.config.settings.inherit</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='languages']" position="before">
          <div id="hotline">
            <block title="Hotline" name="hotline_setting_container">
              <setting id="hotline_setting">
                <div class="w-50 d-flex align-item-center">
                  <label for="hotline"></label>
                  <field name="hotline" class="w-auto ps-1 fw-bold"/>
                </div>
              </setting>
            </block>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
