<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Inherit Form View to Modify it -->
        <record id="vitech_real_estate_company_view_tree" model="ir.ui.view">
            <field name="name">vitech_real_estate_branch_view_tree</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="director_id"/>
                    <field name="company_code"/>
                    <field name="team_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="vitech_real_estate_company_view_form" model="ir.ui.view">
            <field name="name">vitech_real_estate_branch_view_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <!--                    <field name="director_id" groups="vitech_real_estate_core.real_estate_group_super_admin"/>-->
                    <field name="director_id"/>
                    <field name="company_code"/>
                    <field name="director_branch_id"/>
                </xpath>
                <!--                <xpath expr="//page[@name='branches']" position="attributes">-->
                <!--                    <attribute name="invisible">parent_id</attribute>-->
                <!--                </xpath>-->
                <xpath expr="//page[@name='branches']" position="after">
                    <page name="teams" string="Teams" invisible="director_id == False">
                        <field name="team_ids" nolabel="1" context="{'default_branch_id': id}"/>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="vitech_real_estate_company_view_kanban" model="ir.ui.view">
            <field name="name">vitech_real_estate_branch_view_kanban</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_res_company_kanban"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@t-if='!selection_mode']" position="replace">
                    <div class="row" t-if="!selection_mode">
                        <div class="col-6 text-center">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-6 text-center">
                            <strong>Phone</strong>
                        </div>
                        <div class="col-6 text-center">
                            <field name="email" placeholder="Email"/>
                        </div>
                        <div class="col-6 text-center o_force_ltr">
                            <field name="phone" placeholder="Phone number"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

