<?xml version="1.0" encoding="UTF-8" ?>
<!-- Camera dialog box template-->
<templates xml:space="preserve">
  <t t-name="vitech.camera_dialog">
    <Dialog size="'xl'" title="props.title" modalRef="modalRef">
      <video t-ref="video" width="100%" height="100%" autoplay="true" playsinline="true"/>
      <img t-ref="image" width="100%" height="100%" class="d-none"/>
      <t t-set-slot="footer" owl="1">
        <button class="btn btn-primary" t-if="!this.state.url" t-on-click="_confirm"
                t-esc="props.confirmLabel">Chụp ảnh</button>
        <button class="btn btn-primary" t-if="this.state.url" t-on-click="_save" t-esc="props.cancelLabel">Lưu</button>
        <button class="btn btn-secondary" t-if="this.state.url" t-on-click="_reset"
                t-esc="props.cancelLabel">Đặt lại</button>
        <button class="btn btn-secondary" t-on-click="_cancel" t-esc="props.cancelLabel">Hủy</button>
      </t>
    </Dialog>
  </t>
</templates>