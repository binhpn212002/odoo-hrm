<?xml version="1.0" encoding="utf-8"?>
<odoo>
   

 <!-- tree view -->
 <record id="hr_overtime_summary_tree_view" model="ir.ui.view">
    <field name="name">hr.overtime.summary.tree.view</field>
    <field name="model">hr.overtime.summary</field>
    <field name="priority">99</field>
    <field name="arch" type="xml">
        <tree>
            <field name="employee_id"/>
            <field name="date_from"/>
            <field name="date_to"/>
            <field name="total_overtime"/>
            <field name="ot_type_id"/>
        </tree>
    </field>
 </record>

 <record id="action_hr_overtime_summary" model="ir.actions.act_window">
    <field name="name">HR Overtime Summary</field>
    <field name="res_model">hr.overtime.summary</field>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="hr_overtime_summary_tree_view"/>
 </record>

</odoo>