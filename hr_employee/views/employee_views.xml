<odoo>
    <data>
        <record id="odoo_view_employee_inherit" model="ir.ui.view">
            <field name="name">hr.employee.search.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group/field[@name='work_phone']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//sheet/group/group/field[@name='work_email']" position="after">
                    <field name="private_phone"/>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group[@name='emergency']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//sheet/notebook/page/group/group/separator[@string='Work Permit']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='visa_no']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='permit_no']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='visa_expire']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='work_permit_expiration_date']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='work_permit_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='has_work_permit']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group[@string='Citizenship']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='spouse_birthdate']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/div[@name='div_km_home_work']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='user_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//sheet/notebook/page/group/group/div/field[@name='barcode']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


            </field>
        </record>


    </data>
</odoo>
