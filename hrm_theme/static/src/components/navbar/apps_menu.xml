<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="hrm_theme.NavBar.AppsMenu">
        <div id="dropdown"
             class="o_hrm_app_menu d-none d-md-block d-lg-block d-xl-block d-xxl-block  py-3">
            <span t-on-click="()=>this.openWithWindow()" class="cursor-pointer">
                <i class="fa fa-bars app_menu"   width="28"  aria-hidden="true"></i>
            </span>
          <div t-if="this.state.isMenu" class="o_hrm_app_menu_data o_hrm_app_menu_bg position-absolute">
            <t t-set="apps" t-value="this.state.menuApp"/>
            <div class="o_hrm_app_menu_data_wrap">
            <div class=" o_hrm_app_menu_data_item  d-flex justify-content-center align-items-center  "
                 t-foreach="apps"
                 t-as="app"
                 t-key="app.id">
                    <DropdownItem
                            class="{ 'o_app p-3 fw-bolder': true, focus: menuService.getCurrentApp() === app }"
                            href="this.state.hrmMenuService.getMenuItemHref(app)"
                            dataset="{ menuXmlid: app.xmlid, section: app.id }"
                            onSelected="() => this.onNavBarDropdownItemSelection(app)">
                      <img t-if="app.webIconData" t-att-src="'data:image/png;base64,' + app.webIconData" alt="App Icon"
                           width="26" class="me-2"/>
                      <span t-out="app.name"/>
                    </DropdownItem>
                </div>
            </div>
            </div>
        </div>
    </t>
</templates>
