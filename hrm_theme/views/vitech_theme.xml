<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_vitech_theme_tree" model="ir.ui.view">
    <field name="name">vitech.theme.tree</field>
    <field name="model">vitech.theme</field>
    <field name="arch" type="xml">
      <tree string="Themes">
        <field name="name"/>
        <field widget="color" name="primary_color"/>
        <field widget="color" name="dropdown_item_menu"/>
        <field widget="color" name="secondary_color"/>
        <field widget="color" name="info_color"/>
      </tree>
    </field>
  </record>

  <record id="action_vitech_theme" model="ir.actions.act_window">
    <field name="name">Themes</field>
    <field name="res_model">vitech.theme</field>
    <field name="view_mode">tree</field>
  </record>
</odoo>
