<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vitech_slider_form_view" model="ir.ui.view">
            <field name="name">vitech.slider.form</field>
            <field name="model">vitech.slider</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" class="border p-2 rounded-3"/>
                            <field name="image" class="border p-2 rounded-3"/>
                            <field name="description" class="border p-2 rounded-3"/>
                            <field name="sequence" class="border p-2 rounded-3"/>
                            <field name="active"/>
                            <field name="company_id" class="border p-2 rounded-3" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="vitech_slider_tree_view" model="ir.ui.view">
            <field name="name">vitech.slider.tree</field>
            <field name="model">vitech.slider</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="active"/>
                    <field name="company_id" class="column-mobile-hidden"/>
                </tree>
            </field>
        </record>

