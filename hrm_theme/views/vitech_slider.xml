        <record id="vitech_slider_act_window" model="ir.actions.act_window">
            <field name="name">Slider MKT</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vitech.slider</field>
            <field name="view_mode">tree,form</field>
<!--            <field name="domain">[('company_id', '=', user.company_id.id)]</field>-->
        </record>

        <menuitem name="Slider MKT" id="vitech_slider_menu" parent="base.menu_users" action="vitech_slider_act_window"/>
    </data>
</odoo>