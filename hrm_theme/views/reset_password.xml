<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <template id="hrm_reset_password" inherit_id="auth_signup.reset_password" name="Reset Password">
    <xpath expr="//t[@t-call='web.login_layout']/form[hasclass('oe_reset_password_form')]" position="attributes">
      <attribute name="class" add="d-flex flex-column justify-content-center h-full" separator=" "></attribute>
    </xpath>
    <xpath expr="//t[@t-call='web.login_layout']/form/input[@name='csrf_token']" position="before">
      <h2 class="txt-primary  text-center mb-2">Đổi mật khẩu</h2>
    </xpath>
    <xpath expr="//t[@t-call='web.login_layout']/form/div/button" position="replace">
      <button type="submit" class="btn bg-primary p-3 text-white fw-bold mb-3">Lưu</button>
    </xpath>
  </template>

  <template id="hrm_auth_signup_fields" inherit_id="auth_signup.fields" name="Reset Password">

    <xpath expr="//div[hasclass('field-login')]" position="before">
      <lable for="login">Email</lable>
    </xpath>
    <xpath expr="//div[hasclass('field-login')]" position="attributes">
      <attribute name="class" separator=" " add="o_field_login opacity-50 "></attribute>
      <attribute name="style">background: #efefef;</attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-login')]/label" position="attributes">
      <attribute name="class" separator=" " add="d-none"></attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-login')]/input[@name='login']" position="attributes">
      <attribute name="class" remove="form-control form-control-sm" separator=" " add="o_field_login_input"></attribute>
    </xpath>

    <xpath expr="//div[hasclass('field-name')]" position="before">
      <lable for="name">Họ tên</lable>
    </xpath>
    <xpath expr="//div[hasclass('field-name')]" position="attributes">
      <attribute name="class" separator=" " add="o_field_login opacity-50"></attribute>
      <attribute name="style">background: #efefef;</attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-name')]/label" position="attributes">
      <attribute name="class" separator=" " add="d-none"></attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-name')]/input[@name='name']" position="attributes">
      <attribute name="class" remove="form-control form-control-sm" separator=" " add="o_field_login_input"></attribute>
    </xpath>

    <xpath expr="//div[hasclass('field-password')]" position="before">
      <lable for="password">Mật khẩu</lable>
    </xpath>
    <xpath expr="//div[hasclass('field-password')]/label" position="attributes">
      <attribute name="class" separator=" " add="d-none"></attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-password')]/input[@name='password']" position="attributes">
      <attribute name="class" remove="form-control form-control-sm" separator=" " add="o_field_login_input"></attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-password')]" position="attributes">
      <attribute name="class" separator=" " add="o_field_login"></attribute>
    </xpath>

    <xpath expr="//div[hasclass('field-confirm_password')]" position="before">
      <lable for="confirm_password">Nhập lại mật khẩu</lable>
    </xpath>
    <xpath expr="//div[hasclass('field-confirm_password')]/label" position="attributes">
      <attribute name="class" separator=" " add="d-none"></attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-confirm_password')]/input[@name='confirm_password']" position="attributes">
      <attribute name="class" remove="form-control form-control-sm" separator=" " add="o_field_login_input"></attribute>
    </xpath>
    <xpath expr="//div[hasclass('field-confirm_password')]" position="attributes">
      <attribute name="class" separator=" " add="o_field_login"></attribute>
    </xpath>
  </template>
</odoo>
