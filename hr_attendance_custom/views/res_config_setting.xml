<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_attendance_view_form_custom" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.attendance.custom</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <!-- ChÃ¨n block Shift sau block Kiosk -->
            <xpath expr="//block[@name='kiosk_mode_setting_container']" position="after">
                <block title="Shift Settings" name="attendance_shift">
                    <setting string="Work Time Configuration">
                        <div class="row mt16">
                            <div class="col-6">
                                <label for="work_start_time"/>
                                <field name="work_start_time"/>
                            </div>
                            <div class="col-6">
                                <label for="work_end_time"/>
                                <field name="work_end_time"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>

        </field>
    </record>

</odoo>
